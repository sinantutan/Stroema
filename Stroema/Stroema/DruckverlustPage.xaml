<Page
    x:Class="Stroema.DruckverlustPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DruckverlustPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TitleRow" Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Label
            x:Name="TitleLabel"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Content="Druckverlust berechnen" />
        <Label
            x:Name="VolumenStromLabel"
            Grid.Row="1"
            Grid.Column="1"
            Margin="3"
            Content="Volumenstrom:" />
        <TextBox
            x:Name="VolumenstromTextBox"
            Grid.Row="1"
            Grid.Column="2"
            Margin="3" />
        <!--> Volumenstrom Placeholder <-->
        <TextBlock
            x:Name="VolumenstromPlaceholder"
            Grid.Row="1"
            Grid.Column="2"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. 5.47 [m³/h]">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=VolumenstromTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label
            x:Name="RohrdurchmesserLabel"
            Grid.Row="2"
            Grid.Column="1"
            Margin="3"
            Content="Rohrdurchmesser:" />
        <TextBox
            x:Name="RohrdurchmesserTextBox"
            Grid.Row="2"
            Grid.Column="2"
            Margin="3" />
        <!--> Rohrdurchmesser Placeholder <-->
        <TextBlock
            x:Name="RohrdurchmesserPlaceholder"
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. 0.0254 [m]">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=RohrdurchmesserTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label
            x:Name="RohrlaengeLabel"
            Grid.Row="3"
            Grid.Column="1"
            Margin="3"
            Content="Rohrlänge:" />
        <TextBox
            x:Name="RohrlaengeTextBox"
            Grid.Row="3"
            Grid.Column="2"
            Margin="3" />
        <!--> Rohrlaenge Placeholder <-->
        <TextBlock
            x:Name="RohrlaengePlaceholder"
            Grid.Row="3"
            Grid.Column="2"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. 400 [m]">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=RohrlaengeTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label
            x:Name="GHohenunterschiedLabel"
            Grid.Row="4"
            Grid.Column="1"
            Margin="3"
            Content="G. Höhenunterschied:" />
        <TextBox
            x:Name="GHohenunterschiedTextBox"
            Grid.Row="4"
            Grid.Column="2"
            Margin="3" />
        <!--> Geodätische Höhendifferenz Placeholder <-->
        <TextBlock
            x:Name="GHohenunterschidePlaceholder"
            Grid.Row="4"
            Grid.Column="2"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. 20 [m]">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=GHohenunterschiedTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label
            x:Name="WandrauhigkeitLabel"
            Grid.Row="1"
            Grid.Column="3"
            Margin="3"
            Content="Wandrauhigkeit:" />
        <TextBox
            x:Name="WandrauhigkeitTextBox"
            Grid.Row="1"
            Grid.Column="4"
            Margin="3" />
        <!--> Wandrauhigkeit Placeholder <-->
        <TextBlock
            x:Name="WandrauhigkeitPlaceholder"
            Grid.Row="1"
            Grid.Column="4"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. 15 [μm]">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=WandrauhigkeitTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <TextBox
            x:Name="DichteTextBox"
            Grid.Row="2"
            Grid.Column="4"
            Margin="3"
            TextChanged="DichteTextBox_TextChanged" />
        <!--> Dichte Placeholder <-->
        <TextBlock
            x:Name="DichtePlaceholder"
            Grid.Row="2"
            Grid.Column="4"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. 1000 [kg/m³]">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=DichteTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label
            x:Name="DichteLabel"
            Grid.Row="2"
            Grid.Column="3"
            Margin="3"
            Content="Dichte:" />
        <TextBox
            x:Name="ViskositaetTextBox"
            Grid.Row="3"
            Grid.Column="4"
            Margin="3" />
        <!--> Viskosität Placeholder <-->

        <TextBlock
            x:Name="ViskositaetPlaceholder"
            Grid.Row="3"
            Grid.Column="4"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. 1 [1E-06]">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=ViskositaetTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Label
            x:Name="ViskositaetLabel"
            Grid.Row="3"
            Grid.Column="3"
            Margin="3"
            Content="Viskosität:" />
        <Label
            x:Name="DruckverlustbeiwertLabel"
            Grid.Row="4"
            Grid.Column="3"
            Margin="3"
            Content="Druckverlustbeiwert:" />
        <TextBox
            x:Name="DruckverlustbeiwertTextBox"
            Grid.Row="4"
            Grid.Column="4"
            Margin="3" />
        <TextBlock
            x:Name="DruckverlustbeiwertPlaceholder"
            Grid.Row="4"
            Grid.Column="4"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.5"
            Text="   z.B. ???">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=DruckverlustbeiwertTextBox}" Value="">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Button
            x:Name="DruckverlustBerechnenButton"
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="3"
            BorderBrush="Black"
            Content="Berechnen" />
        <Label
            x:Name="DruckverlustErgebnisLabel"
            Grid.Row="6"
            Grid.Column="3"
            Margin="3"
            Content="Ergebnis:" />
        <TextBox
            x:Name="DruckverlustErgebnisTextBox"
            Grid.Row="6"
            Grid.Column="4"
            Margin="3"
            IsHitTestVisible="False" />
    </Grid>
</Page>
